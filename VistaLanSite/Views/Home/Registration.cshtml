@{
    ViewData["Title"] = "VistaLAN - registreren";
}

@model RegistrationModel

@* Header *@
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <p class="navbar-brand">Inschrijven</p>
            <a class="navbar-text" asp-area="" asp-controller="Home" asp-action="Index">Terug</a>
        </div>
    </nav>
</header>

@* Content *@
<div class="text-center">
    <div class="flex-form">
        <form asp-controller="Home" asp-action="SubmitRegistration">
            <h2>Persoonlijke informatie:</h2>
            <div class="flex-container">
                <p>Voornaam:</p>
                <input type="text" asp-for="Participant.FirstName" placeholder="Voornaam" />
            </div>
            <div class="flex-container">
                <p>Achternaam:</p>
                <input type="text" asp-for="Participant.LastName" placeholder="Achternaam" />
            </div>
            <div class="flex-container">
                <p>Leerlingnummer:</p>
                <input type="text" asp-for="Participant.StudentNumber" maxlength="5" placeholder="Leerlingnummer" />
            </div>
            <div class="flex-container">
                <p>Klas:</p>
                <input type="text" asp-for="Participant.StudentClass" placeholder="Klas" />
            </div>
            <div class="flex-container">
                <p>Telefoonnummer:</p>
                <input type="text" asp-for="Participant.PhoneNumber" placeholder="Telefoonnummer" />
            </div>
            <h2>Wat neem je mee?</h2>
            <div class="flex-container" style="align-items: flex-start;">
                <div class="flex-container-column">
                    <p>Console?</p><br />
                    <input type="checkbox" asp-for="Participant.BringsConsole" value="true" />
                </div>
                <textarea asp-for="Participant.ConsoleDetails" rows="10" cols="80" placeholder="Welke console? Neem je randapparatuur mee?"></textarea>
            </div>
            <div class="flex-container" style="align-items: flex-start;">
                <div class="flex-container-column">
                    <p>Computer?</p><br />
                    <input type="checkbox" asp-for="Participant.BringsComputer" value="true" />
                </div>
                <textarea asp-for="Participant.ComputerDetails" rows="10" cols="80" placeholder="Desktop of laptop? Neem je randapparatuur mee?"></textarea>
            </div>
            <input type="hidden" asp-for="Participant.HasPaid" value="0" />
            <input class="submit-registration" type="submit" value="Inschrijven" />
        </form>
    </div>
</div>